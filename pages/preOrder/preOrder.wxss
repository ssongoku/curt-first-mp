/* pages/preOrder/preOrder.wxss */
page {
  background: #f3f4f5;
  /* font-size: 37.5px;  */
}

.product-name-wrap {
  color: #404040;
  background-color: #fff;
  width: 100%;
  padding: 20rpx 40rpx;
}

.ui-list-item-info {
  margin: 10rpx 0;
  font-weight: bold;
  font-size: 40rpx;
}

.ui-list-item-address {
  width: 85%;
  display: inline-flex;
  color: #585c64;
  font-size: 30rpx;
}

.placeholder {
  font-style: italic;
  color: gray;
  font-size: 50rpx;
}

.ui-list-item-del {
  width: 20rpx;
  height: 20rpx;
  margin-bottom: 20rpx;
}

.scroll {
  margin-bottom: 40rpx;
}

.cart_container {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.column {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* margin-top: 40rpx;  *//* border: 1rpx solid #000000;  */
}

.sku-count {
  margin-left: 100rpx;
  position: absolute;
  right: 30rpx;
  margin-top: 30rpx;
}

.sku-price {
  color: red;
  position: relative;
  margin-top: 30rpx;
}

.title {
  font-size: 32rpx;
  margin-top: 40rpx;
}

.item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}

.separate {
  margin: 5px 0px;
  height: 2rpx;
  background-color: #f2f2f2;
}

.summary-price {
  background-color: #fff;
  padding: 20rpx;
}

.price {
  float: right;
  display: block;
}

.red {
  color: red;
}

.actual-price {
  padding: 20rpx;
  font-size: 50rpx;
}
