<!--index.wxml-->
<import src="../templates/templates.wxml" />
<swiper indicator-dots='true' autoplay='true' interval='5000' duration='1000' circular='true'>
  <block wx:for="{{bannerGoods}}" wx:key="{{item.goodsId}}">
    <swiper-item>
      <image src='{{item.avatar}}' mode='aspectFit' lazy-load='true' data-goods-id='{{item.goodsId}}' bindtap='handleGoodsDetail'></image>
    </swiper-item>
  </block>
</swiper>
<view class='func-area'>
  <view data-index='1' bindtap='navigateGoodsList'>
    <image src='../../images/icon_all.png' mode='aspectFit' class='orange'></image>
    <text>爆款新品</text>
  </view>
  <view data-index='2' bindtap='navigateGoodsList'>
    <image src='../../images/icon_all.png' mode='aspectFit' class='orange'></image>
    <text>当季热卖</text>
  </view>
  <view data-index='3' bindtap='navigateGoodsList'>
    <image src='../../images/icon_all.png' mode='aspectFit' class='orange'></image>
    <text>折扣惊喜</text>
  </view>
  <view data-index='4' bindtap='navigateGoodsList'>
    <image src='../../images/icon_all.png' mode='aspectFit' class='orange'></image>
    <text>高档专区</text>
  </view>
</view>
<template is="hotGoods" data="{{ quickGoods }}" />