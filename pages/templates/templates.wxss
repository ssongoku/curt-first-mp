/* pages/templates/templates.wxss */

/*主容器*/

.stepper {
  width: 90px;
  height: 26px;
  /*给主容器设一个边框*/
  border: 1rpx solid #818284;
  border-radius: 3px;
  margin: 0 auto;
}

/*加号和减号*/

.stepper .sign {
  width: 24px;
  line-height: 26px;
  text-align: center;
  float: left;
}

/*数值*/

.stepper .number {
  width: 40px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  color: #000;
  /*给中间的input设置左右边框即可*/
  border-left: 1rpx solid #818284;
  border-right: 1rpx solid #818284;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

/*主商品区*/
.container-goods {
	background: white;
}

.container-goods .caption {
	font-size: 32rpx;
	width: 100%;
	line-height: 60rpx;
	text-indent: 20rpx;
	padding: 10rpx;
}

.main-goods {
	border-top: 1px solid #eee;
	background: white;
	display: inline-block;
}

.main-goods .single-goods {
	display: block;
	float: left;
	width: 50%;
}

.main-goods image {
	width: 220rpx;
	height: 220rpx;
	display: block;
	margin: 20rpx auto;
}

.main-goods .title {
	display: block;
	width: 90%;
	color: #999;
	font-size: 28rpx;
	margin: 10rpx 6rpx;
	height: 60rpx;
	line-height: 32rpx;
	overflow: hidden;
}

.main-goods .summary {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.main-goods .summary text {
	font-size: 28rpx;
	margin: 10rpx 20rpx;
}

.main-goods .summary .price {
	color: red;
}

.main-goods .summary .sale {
	color: gray;
}
